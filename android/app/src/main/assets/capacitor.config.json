{
	"appId": "com.livematch.tracker",
	"appName": "livematch-tracker",
	"webDir": "dist",
	"server": {
		"androidScheme": "https"
	},
	"plugins": {
		"CapacitorHttp": {
			"enabled": true
		},
		"BackgroundRunner": {
			"label": "com.livematch.tracker.background",
			"src": "background.js",
			"event": "checkPlayers",
			"repeat": true,
			"interval": 1,
			"autoStart": true
		},
		"LocalNotifications": {
			"smallIcon": "ic_stat_icon_config_sample",
			"iconColor": "#488AFF",
			"sound": "beep.wav"
		}
	}
}
